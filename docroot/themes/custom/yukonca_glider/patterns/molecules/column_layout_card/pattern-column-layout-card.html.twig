<div class="column-layout-card">
  <h4 class="main-link border-solid border-b-1 border-gray-lightborder text-lg">
    {{ main_link }}
  </h4>
  <div class="subcategory-links mt-4">
    {% if level_2_link %}
      <div class="level_2-link">
        {{ level_2_link }}
      </div>
    {% endif %}

    {% if links['#items'] %}
      {% for link in links['#items'] %}
        <div class="link-item">
          {% if link.url is not empty %}
            {{ link(link.title, link.url, {'class': ['font-medium']}) }}
          {% endif %}
        </div>
      {% endfor %}
    {% else %}
      {% for link in links %}
        <div class="link-item">
          {% if link.url is not empty %}
            {{ link(link.title, link.url, {'class': ['font-medium']}) }}
          {% endif %}
        </div>
      {% endfor %}
    {% endif %}
    {#<a href="">See More in {{ main_link.0.value }}</a>#}
  </div>

</div>
