{% set prefix = 'accordion-item' %}
{% set classes = [
  prefix,
  prefix ~ '--' ~ variant,
] %}

{% if title is not empty %}
    {% set anchor = title|trim|clean_id %}
    {% set item_id = 'accordion-item'|clean_unique_id %}
    
    {% if item_id == "accordion-item" %}
        <div class="accordion-item">
          <div class="accordion-header" id="{{ item_id }}--header">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#{{ item_id }}--body" aria-expanded="true" aria-controls="{{ item_id }}--body">
              {{ title }}
            </button>
          </div>
          <div id="{{ item_id }}--body" class="accordion-collapse collapse show" aria-labelledby="{{ item_id }}--header">
            <div class="accordion-body">
              {{ content }}
            </div>
          </div>
        </div>
    
    {% else %}
        <div class="accordion-item">
          <div class="accordion-header" id="{{ item_id }}--header">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#{{ item_id }}--body" aria-expanded="false" aria-controls="{{ item_id }}--body">
              {{ title }}
            </button>
          </div>
          <div id="{{ item_id }}--body" class="accordion-collapse collapse" aria-labelledby="{{ item_id }}--header">
            <div class="accordion-body">
              {{ content }}
            </div>
          </div>
        </div>
    
    
    {% endif %}
{% endif %}