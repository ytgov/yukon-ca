/**
 * Implements hook_preprocess_HOOK().
 */
function yukonca_glider_preprocess_node__documents(&$variables) {

  $node = $variables['node'];
  if ($node->hasField('field_document_upload') && !$node->get('field_document_upload')->isEmpty()) {

    $media_file = $node->get('field_document_upload')->entity;

    if (!empty($media_file) && $media_file->hasField('field_media_file') && !$media_file->get('field_media_file')->isEmpty()) {

      $fid = $media_file->field_media_file->target_id;
      $file = File::load($fid);
      // dump($file); die;.
      if (!empty($file)) {
        $variables['document_size'] = ByteSizeMarkup::create($file->getSize() ?? 0);
        $variables['document_type'] = str_replace('application/', '', $file->getMimeType());
        $variables['file_url'] = $file->createFileUrl();
      }
    }
  }
}

/**
 * Implements template_proprocess_page().
 */
function yukonca_glider_preprocess_page(&$variables) {
  $route_match = \Drupal::routeMatch();

  if ($route_match->getRouteName() === 'entity.node.canonical') {
    /** @var \Drupal\Core\Language\LanguageInterface $language */
    $request_langcode = \Drupal::languageManager()
      ->getCurrentLanguage()
      ->getId();
    /** @var \Drupal\node\NodeInterface $node */
    $node = $route_match->getParameter('node');
    $roles = \Drupal::currentUser()->getRoles();

    // If the node doesn't have a translation in the requested language.
    if (in_array('anonymous', $roles) && $node && !$node->hasTranslation($request_langcode)) {
      $message = t('The content of this page is being displayed in %fallback-language because it is not available in %request-language.', [
        '%fallback-language' => $node->language()->getName(),
        // Get the native language name with getLanguageName().
        '%request-language' => \Drupal::languageManager()
          ->getLanguageName($request_langcode),
      ]);
      \Drupal::messenger()->addWarning($message);

    }
  }

  $current_path = \Drupal::service('path.current')->getPath();
  $data = explode("/", $current_path);
  if (in_array('taxonomy', $data)) {
    $term = \Drupal::entityTypeManager()->getStorage('taxonomy_term')->load($data['3']);
    if ($term->get('vid')->getValue()[0]['target_id'] == "department") {
      $url = Url::fromRoute('system.403');
      $response = new RedirectResponse($url->toString());
      $response->send();
    }
  }

  $config_pages_storage = \Drupal::entityTypeManager()->getStorage('config_pages');
  // Validate quick exit only if the field exist and it is not NULL.
  if ((!empty($node)) && ($node->hasField('field_quick_exit'))) {
    $field_value = (bool) $node->get('field_quick_exit')->value;
    if ($field_value) {
      // Quick exit config pages functionality.
      $quick_exit_entity = $config_pages_storage->load('quick_exit');

      if (!empty($quick_exit_entity)) {
        $variables['quick_exit']['enable'] = $field_value;
        $variables['quick_exit']['label'] = $quick_exit_entity->get('field_button_text')->value;
        $variables['quick_exit']['new'] = $quick_exit_entity->get('field_new_tab')->value;
        $variables['#attached']['drupalSettings']['quick_exit'] = [
          'back' => $quick_exit_entity->get('field_back_button')->value,
          'previous' => $quick_exit_entity->get('field_previous_tab')->value,
        ];
      }
    }
  }

  // Click to call functionality.
  if ((!empty($node)) && ($node->hasField('field_click_to_call'))) {
    $field_value = (bool) $node->get('field_click_to_call')->value;
    if ($field_value) {
      $click_to_call_entity = $config_pages_storage->load('click_to_call');

      if (!empty($click_to_call_entity)) {
        $variables['click_to_call']['enable'] = $field_value;
        $variables['click_to_call']['button_text'] = $click_to_call_entity->get('field_button_text_ctc')->value;
        $variables['click_to_call']['telephone'] = $click_to_call_entity->get('field_telephone')->value;
      }
    }
  }

  // Acknowledgment statement pattern variables.
  $acknow_entity = $config_pages_storage->load('acknowledgment_statement');
  if (!empty($acknow_entity)) {
    $variables['acknowledgment_statement']['enable'] = $acknow_entity->get('field_enabled')->value;
    $variables['acknowledgment_statement']['text'] = $acknow_entity->get('field_statement')->value;
  }

  $variables['Footer_text'] = theme_get_setting('Footer_text');
  $variables['current_path'] = $current_path;
  if (!empty($variables['node'])) {
    /** @var \Drupal\node\NodeInterface $node */
    $node = $variables['node'];

    $variables['content_type'] = $node->bundle();
    if ($node->bundle() == 'topics_page') {
      $variables['type'] = "topics_page";
    }

    if ($node->bundle() == 'basic_page') {
      $variables['type'] = "basic_page";
    }
    $variables['documents_non_branded'] = "";
    if ($node->bundle() == 'documents') {
      $variables['documents_non_branded'] = $node->field_documents_non_branded->value;
    }
    $langcode = \Drupal::languageManager()->getCurrentLanguage()->getId();
    if ($node->bundle() == 'campaign_page') {
      $variables['campaign_type'] = $node->field_campaign_type->value;
      $variables['copyright_notice'] = $node->field_display_copyright_notice->value;
      $variables['copyright_notice_text'] = $node->field_copyright_notice_text->value;
      $variables['campaign_home_logo_display'] = $node->field_campaign_home_logo_display->value;

      // If ($variables['campaign_type'] == 'government_of_yukon') {.
      $img = $node->field_image->target_id;
      $media = NULL;
      if (!empty($img)) {
        $media = Media::load($img);
      }
      if (isset($media->field_media_image_1)) {
        $fid = $media->field_media_image_1->target_id;
        $file = File::load($fid);

        $url = $file->createFileUrl();
        $variables['logo_url'] = $url;
        $string = $node->field_campaign_home_logo_link->uri;
        $char = "internal";
        $variables['logo_link_url'] = "";
        if (strpos($string, $char) !== FALSE) {
          $url = Url::fromUri($node->field_campaign_home_logo_link->uri);
          $variables['logo_link_url'] = $url->toString();
        }
        else {
          $variables['logo_link_url'] = $node->field_campaign_home_logo_link->uri;
        }
      }

      if ($langcode == 'en') {
        $parent_page = $node->field_parent_campaign_page->target_id;
        $alias = \Drupal::service('path_alias.manager')->getAliasByPath('/node/' . $parent_page);

        if (!empty($parent_page)) {
          $node_parent = Node::load($parent_page);
          $parent_page2 = $node_parent->field_parent_campaign_page->target_id;

          if (!empty($parent_page2)) {
            // Change alias only if there is a double parent.
            $alias = \Drupal::service('path_alias.manager')->getAliasByPath('/node/' . $parent_page2);
            $node_parent2 = Node::load($parent_page2);

            $child_cam = $node_parent2->field_child_campaign_pages->getValue();
            $i = 1;
            if (!empty($child_cam)) {
              $variables['campaign_menu'][0] = ['0' => 'Home', '1' => '/en' . $alias];
              foreach ($child_cam as $child) {
                $node_child = Node::load($child['target_id']);
                $submenu_title = $node_child->getTitle();
                if (!empty($node_child->field_campaign_menu_title->getValue())) {
                  $submenu_title = $node_child->field_campaign_menu_title->getValue()[0]['value'];
