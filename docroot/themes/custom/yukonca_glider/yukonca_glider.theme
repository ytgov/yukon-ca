/**
 * Implements template_preprocess_paragraph().
 */
function yukonca_glider_preprocess_paragraph(&$variables) {
  $paragraph = $variables['elements']['#paragraph'];
  // Get the parent bundle.
  $parentBundle = $paragraph->bundle();

  global $base_url;
  if ($parentBundle == 'secondary_content') {
    if (!empty($paragraph->field_landing_page_level_2->target_id)) {
      $node = Node::load($paragraph->field_landing_page_level_2->target_id);
      $alias = \Drupal::service('path_alias.manager')->getAliasByPath('/node/' . $paragraph->field_landing_page_level_2->target_id);
      $view = \Drupal::entityTypeManager()
        ->getStorage('view')
        ->load('what_are_you_looking_for_landing_page_l2')

        ->getExecutable();

      // Get the NID from the View result.
      $view->initDisplay();
      $view->setArguments([$paragraph->field_landing_page_level_2->target_id]);
      // $view->setDisplay('latest_blog');
      $view->execute();

      $result = count($view->result);
      $variables['landing_page_l2_count'] = $result;
      $langcode = \Drupal::languageManager()->getCurrentLanguage()->getId();
      $translated_entity = $node->getTranslation($langcode);
      $translated_title = $translated_entity->getTitle();
      $variables['title'] = $translated_title;
      $variables['landing_page_url'] = $base_url . "/" . $langcode . $alias;
    }
  }
  if ($parentBundle == 'call_to_action') {
    $string = $paragraph->field_link->uri;
    $char = "internal";

    if (strpos($string, $char) !== FALSE) {
      $url = Url::fromUri($paragraph->field_link->uri);
      $variables['field_link_url'] = $url->toString();
    }
    else {
      $variables['field_link_url'] = $paragraph->field_link->uri;
    }
  }
  if ($parentBundle == 'opening_and_closing_times') {
    $langcode = \Drupal::languageManager()->getCurrentLanguage()->getId();
    if ($langcode == 'fr') {
      $start_time = explode(".", $paragraph->field_opening_time->value / (60 * 60));
      $end_time = explode(".", $paragraph->field_closing_time->value / (60 * 60));
      if (isset($start_time[1])) {
        $variables['start_time'] = $start_time[0] . ' h ' . date("i", $paragraph->field_opening_time->value);
      }
      else {
        $variables['start_time'] = $start_time[0] != '0' ? $start_time[0] . ' h' : '00' . ' h';
      }
      if (isset($end_time[1])) {
        $variables['end_time'] = $end_time[0] . ' h ' . date("i", $paragraph->field_closing_time->value);
      }
      else {
        $variables['end_time'] = $end_time[0] != '0' ? $end_time[0] . ' h' : '00' . ' h';
      }
    }
    $variables['lang'] = $langcode;
  }
  if ($parentBundle == 'top_tasks') {
    if (!empty($paragraph->field_top_tasks_link->target_id)) {
      $langcode = \Drupal::languageManager()->getCurrentLanguage()->getId();
      $alias_url = \Drupal::service('path_alias.manager')->getAliasByPath('/node/' . $paragraph->field_top_tasks_link->target_id, $langcode);
      $variables['field_link_url'] = $base_url . '/' . $langcode . $alias_url;
    }
    else {
      $variables['field_link_url'] = '';
    }
  }
}

